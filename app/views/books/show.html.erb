<head>
   <script src="https://kit.fontawesome.com/e845899d2e.js" crossorigin="anonymous"></script>
 </head>

<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
 <%= notice %>

 <h2>User info</h2>
<tr>
<th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %></th>
</tr>

<table class="table">
 <tr>
<th>name: <%= @user.name %></th>
</tr>
<tr>
<th>introduction: <%= @user.introduction %></th>
</tr>
</table>

<div class="row">
 <th><%= link_to "", edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></th>
</div>

<h2>New book</h2>
 <% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <% @book.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
 <% end %>


<%= form_with model: @book_new, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<p><%= f.submit 'Create Book', class: "btn btn-success" %></p>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
 <table table border="0" rules="rows", width="100%", style="table-layout: fixed;">
  <tr>
<h1>Book detail</h1>
</tr>
<tr>
<th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %></th>
<th><%= link_to @book.title %></th>
<th><%= @book.body %></th>
<% if @user.id == current_user.id %>
<th><%= link_to "Edit", edit_book_path(@book.id) %></th>
<th><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
<% end %>
</tr>
<tr>
 <th><%= link_to @user.name, user_path(@user.id) %></th>
</tr>
</table>
</div>
</div>
</div>
